{% extends 'base.html.twig' %}

{% block title %}Movie{% endblock %}

{% block body %}
    <h1 style="text-align: center">Movie</h1>


    <table class="table" style="width: 50%;margin: 0 auto 0 auto">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movie.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ movie.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ movie.description }}</td>
            </tr>
            <tr>
                <th>Review</th>
                <td>{{ movie.review }}</td>
            </tr>
        </tbody>
    </table>
    <br>

    <div class="container text-center flex-column">
        {% if is_granted('ROLE_ADMIN') %}
        {{ include('movie/_delete_form.html.twig') }}
        {% endif %}
        <br>
        <button class="btn btn-secondary" onclick="location.href='{{ path('app_movie_index') }}'">Back to list</button>
        {% if is_granted('ROLE_ADMIN') %}
        <button class="btn btn-warning" onclick="location.href='{{ path('app_movie_edit', {'id': movie.id}) }}'">Edit</button>
        {% endif %}
        <br>
</div>
{% endblock %}
